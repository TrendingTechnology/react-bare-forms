{
  "name": "react-bare-forms",
  "version": "0.0.1",
  "description": "A bare minimal React form library for quick & simple forms.",
  "main": "index.js",
  "scripts": {
    "build-dev": "webpack --env.mode devlopment --entry=./src/index.ts --output-path=lib --output-filename=index.js",
    "build-prod": "webpack --env.mode production --entry=./src/index.ts --output-path=lib --output-filename=index.js",
    "start": "webpack-dev-server --config webpack.config.dev.js --output-path=dist --output-filename=bundle.js",
    "test": "jest",
    "typedoc": "typedoc --mode modules --ignoreCompilerErrors --stripInternal --out docs src && touch docs/.nojekyll"
  },
  "jest": {
    "setupFiles": [
      "./tests/setupTests.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js)?$"
  },
  "keywords": [
    "react"
  ],
  "author": "joegasewicz",
  "license": "MIT",
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-test-renderer": "^16.9.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^25.4.0",
    "react-test-renderer": "^16.13.1",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.1",
    "tslint": "^6.1.1",
    "typedoc": "^0.17.4",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "save-dev": "0.0.1-security",
    "webpack-dev-server": "^3.10.3"
  }
}
